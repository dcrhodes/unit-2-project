<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<h3 class="text-white">Artist: <%= record.artist %></h3>
<h3 class="text-white">Title: <%= record.title %></h3>
<h3 class="text-white">Released: <%= record.originalYear %></h3>
<h3 class="text-white">Label: <%= record.label %></h3>
<h3 class="text-white">Genre: <%= record.genre %></h3>
<h3 class="text-white">Format: <%= record.format %></h3>
<h3 class="text-white">Reviews:</h3>

<% if (user) { %> 
<% if (!record?.collectedBy.some(profile => profile._id.equals(user.profile._id))) { %>
<form class="" action="/records/<%= record._id %>/addToCollection" method="POST" name="recordId">
  <button>Add to Collection</button><br>
</form>
<% } %>

<button>Add to Wishlist</button><br>

<a href="/records/<%= record._id %>/edit">
    <button>Edit Record</button>
</a>
<form action="/records/<%= record._id %>?_method=DELETE" method="POST">
    <button>Delete Record</button>
</form>



<form action="/records/<%= record._id %>/reviews" method="POST">
<label for="content-textarea">Review:</label>
<textarea name="content" id="content-textarea"></textarea>
<label for="rating-select">Rating:</label>
    <select name="rating" id="rating-select">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5" selected>5</option>
    </select>
<button type="submit">Add Review</button>
</form>

<div class="text-white">
<% if (record.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %> 
      <% record.reviews.forEach(function(review) { %>
        <% total += review.rating %>
        <tr>
          <td><%= review.createdAt.toLocaleDateString() %></td>
          <td><%= review.content %></td>
          <td><%= review.rating %></td>
        </tr>
      <% }) %>
      <tr>
        <td colspan="2"></td>
        <td>
          <strong><%= (total / record.reviews.length).toFixed(1) %></strong>
        </td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h4>No Reviews Yet</h4>
<% } %>
</div>
<% } %> 

<%- include('../partials/footer') %>