<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<div class="container bg-dark" id="formdiv">
    <table class="table table-striped table-dark" id="list">
        <thead>
            <tr>
                <th scope="col">Avatar</th>
                <th scope="col">Member</th>
                <th scope="col">Location</th>
                <th scope="col">Joined</th>
                <th scope="col">Collection</th>
                <th scope="col">Wishlist</th>
            </tr>
        </thead>
        <tbody>
            <% profiles.forEach((profile) => { %>
            <tr>
                <td><img class="img-fluid" src="<%= profile.avatar %>"></td>
                <td><a href="/profiles/<%= profile._id %>"><%= profile.name %></a></td>
                <td><%= profile.location %></td>
                <td><%= profile.createdAt.toLocaleDateString() %></td>
                <td><%= profile.shelf.length %> </td>
                <td><%= profile.wishlist.length %> </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>